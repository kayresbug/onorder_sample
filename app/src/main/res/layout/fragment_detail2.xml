<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/datail_back"
    tools:context=".fragment.DetailFragment"
    android:layout_margin="20dp"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="3">
        <ImageView
            android:id="@+id/detailfragment_img"
            android:layout_width="293.3dp"
            android:layout_height="293.3dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/detailfragment_layout_cancle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:gravity="right">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="40dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/detailfragment_text_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumsquareeb"
                    android:letterSpacing="-0.05"
                    android:lineSpacingExtra="3.3sp"
                    android:text="통 문어 짬뽕"
                    android:textColor="#2a2a2a"
                    android:textSize="22.7sp"
                    android:textStyle="normal" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/detailfragment_text_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumsquarer"
                    android:textStyle="normal"
                    android:textSize="15sp"
                    android:textColor="#2a2a2a"
                    android:letterSpacing="-0.03"
                    android:lineSpacingExtra="6sp"
                    android:text="불 향이 가득한 짬뽕 국물과 오동통통한 면발 통 문어와 해산물의 잔치"
                    />
                <LinearLayout
                    android:id="@+id/radio_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:visibility="invisible">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <RadioGroup
                            android:id="@+id/radioGroup"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <RadioButton
                                android:text="오태식 후라이드치킨"
                                android:checked="true"
                                android:id="@+id/l_btn1"
                                android:textColor="@color/black"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <RadioButton
                                android:id="@+id/l_btn2"
                                android:textColor="@color/black"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:text="조판수 양념치킨 (+1,000원)" />
                            <RadioButton
                                android:text="병진이형 간장치킨 (+1,000원)"
                                android:id="@+id/l_btn3"
                                android:textColor="@color/black"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <RadioButton
                                android:id="@+id/l_btn4"
                                android:textColor="@color/black"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:text="오라클 레드핫치킨 (+1,000원)" />
                            <RadioButton
                                android:text="웰빙 깐풍치킨 (+1,000원)"
                                android:id="@+id/l_btn5"
                                android:textColor="@color/black"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <RadioButton
                                android:id="@+id/l_btn6"
                                android:textColor="@color/black"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:text="희주 치즈시즈닝치킨 (+1,000원)" />
                            <RadioButton
                                android:id="@+id/l_btn7"
                                android:textColor="@color/black"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:text="창무 매콤갈비치킨 (+1,000원)" />
                        </RadioGroup>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <RadioGroup
                            android:id="@+id/radioGroup2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <RadioButton
                                android:id="@+id/r_btn2"
                                android:textColor="@color/black"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:checked="true"
                                android:text="조판수 양념치킨" />
                            <RadioButton
                                android:text="병진이형 간장치킨"
                                android:id="@+id/r_btn3"
                                android:textColor="@color/black"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <RadioButton
                                android:id="@+id/r_btn4"
                                android:textColor="@color/black"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:text="오라클 레드핫치킨" />
                            <RadioButton
                                android:text="웰빙 깐풍치킨"
                                android:id="@+id/r_btn5"
                                android:textColor="@color/black"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <RadioButton
                                android:id="@+id/r_btn6"
                                android:textColor="@color/black"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:text="희주 치즈시즈닝치킨" />
                            <RadioButton
                                android:id="@+id/r_btn7"
                                android:textColor="@color/black"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:text="창무 매콤갈비치킨" />
                        </RadioGroup>
                    </LinearLayout>

                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumsquareeb"
                    android:textStyle="normal"
                    android:textSize="10sp"
                    android:textColor="#2a2a2a"
                    android:letterSpacing="-0.03"
                    android:lineSpacingExtra="1.3sp"
                    android:text="수량을 설정해 주세요"
                    android:visibility="invisible"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/detailfragment_text_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nanumsquareeb"
                            android:letterSpacing="-0.02"
                            android:lineSpacingExtra="3.3sp"
                            android:text="총"
                            android:textColor="#2a2a2a"
                            android:textSize="22.7sp"
                            android:textStyle="normal" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/detailfragment_layout_add"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/detail_ok"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nanumsquareeb"
                            android:letterSpacing="-0.03"
                            android:lineSpacingExtra="1.3sp"
                            android:text="장바구니"
                            android:textColor="#ffffff"
                            android:textSize="30sp"
                            android:textStyle="normal" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>